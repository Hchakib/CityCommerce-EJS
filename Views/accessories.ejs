<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FashionSphere</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('header') %>

    <style>
        .container {
    display: flex;
    justify-content: space-between; /* Espacement égal entre les éléments */
    align-items: center; /* Centrer les éléments verticalement */
    gap: 10px; /* Espacement entre les images */
    margin: 20px auto;
    padding: 0 20px;
}

.men-item {
    flex: 1; /* Assure que tous les éléments prennent la même largeur */
    position: relative;
    overflow: hidden;
}

.men-item img {
    width: 100%;
    height: auto;
    object-fit: cover; /* Ajuste l'image dans son conteneur */
    transition: transform 0.3s ease;
    border-radius: 10px; /* Coins légèrement arrondis (optionnel) */
}

.men-item .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4); /* Superposition sombre */
    color: #fff;
    opacity: 0; /* Masqué par défaut */
    transition: opacity 0.3s ease;
}

.men-item:hover img {
    transform: scale(1.1); /* Zoom sur survol */
}

.men-item:hover .overlay {
    opacity: 1; /* Affiche le texte au survol */
}

.overlay h2 {
    font-size: 2rem;
    text-transform: uppercase;
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.8);
    margin: 0;
}

    </style>
<section class="men">
    <div class="container">
        <!-- Image 1 -->
        <div class="men-item">
            <img src="/image/aa3.png" alt="Image 1">
        </div>
        <!-- Image 2 avec texte -->
        <div class="men-item">
            <div class="overlay">
                <h2>Mens</h2>
            </div>
            <img src="/image/aa2.png" alt="Image 2">
        </div>
        <!-- Image 3 avec texte -->
        <div class="men-item">
            <div class="overlay">
                <h2>Wear</h2>
            </div>
            <img src="/image/aa1.png" alt="Image 3">
        </div>
        <!-- Image 4 -->
        <div class="men-item">
            <img src="/image/aa4.png" alt="Image 4">
        </div>
    </div>
</section>
    <h2 class="h2p">All items</h2> 
    <section class="products">
        <div class="products-container">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <% if (product.Categorie == 'accessories') { %>
                        <div class="product-item">
                            <img src="/image/<%= product.Photo %>" alt="Product Image" class="product-image">
                            <h3 class="product-title"><%= product.Description %></h3>
                            <p class="product-price"><%= product.Prix.toLocaleString() %> $</p>
                            <a href="/detailsProduit/<%= product._id %>">
                                <button class="shop-now-btn">Shop now</button>
                            </a>
                        </div>
                    <% } %>
                <% }); %>
            <% } else { %>
                <p class="notfound">No products found.</p>
            <% } %>
        </div>
    </section>  
</body>
</html>
